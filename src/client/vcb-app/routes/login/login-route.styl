.login-route {
  .box {

    width: 256px;
    margin: 0 auto;
  }
  .logo {

    padding: 22px 0 25px 0;

    text-align right;
    img {
      width 60%;
    }
  }

  .box-login {

    .title-dv {
      color: #58585b;
      font-family: "kuro", Arial, Tahoma;
      font-size: 18px;
      font-weight: bold;
      padding-bottom: 15px;
      text-align: right;
    }

    .controls {
      button {
        background: #00502f;
        border: medium none;
        color: #fff;
        cursor: pointer;
        font-family: Arial, Tahoma;
        line-height: 35px;
        width: 100%;
        text-transform: uppercase;
      }
    }
  }

  .box-language {

  }
}