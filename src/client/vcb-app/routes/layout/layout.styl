.layout {
  & > .header {
    height 54px;
    position relative;

    box-shadow: 0 0 10px 2px #D3D4D6;

    & > .default-content {
      text-align center;
      padding-top: 8px;

      img {
        height 35px;
      }
    }
    & > .text {
      padding-top: 15px;
      text-align center;
      font-weight: bold;
      text-transform: uppercase;
      font-size: 15px;
      color: #144633;
      line-height: 20px;

    }

    .left-toggle {
      position: absolute;
      top: 10px;
      left: 14px;
    }
    .right-toggle {
      position: absolute;
      top: 10px;
      right: 14px;
    }
  }
  & > .content {

  }
}