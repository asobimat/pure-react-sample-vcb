.search-select {
  background: url(../../assets/img/bg-fix-left-input.png) no-repeat scroll left bottom;
  position relative;

  & > input {
    background: url(../../assets/img/bg-fix-right-select.png) no-repeat scroll right bottom;
    padding: 5px;
    width 100%;
    border none;
  }

  .dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    width 100%;
    max-height 100px;
    background white;
    z-index 1;
  }
}